<form action="/bars/$bar.getId()" method="post" id="comment-form">
  <div class="form-group">
    <label for="comment">Comment</label><br>
    <textarea rows="4" cols="50" name="comment" form="comment-form" id="comment" required></textarea>
  </div>
  <div class="form-group">
    <label for="commenter">Name</label>
    <input type="text" name="commenter" id="commenter" required>
  </div>
  <button type="submit" class="btn btn-primary">Add Comment</button>
</form>
